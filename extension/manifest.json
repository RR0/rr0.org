{
  "browser_specific_settings": {
    "gecko": {
      "id": "rr0@rr0.org"
    }
  },
  "manifest_version": 3,
  "name": "RR0",
  "description": "RR0 links & search",
  "version": "1.0",
  "chrome_url_overrides": {
    "newtab": "newtab/index.html"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "RR0 extension popup",
    "default_icon": "icons/128.png"
  },
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content/index.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://rr0.org/",
    "https://archive.org/"
  ]
}
