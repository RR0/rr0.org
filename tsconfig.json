{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [
      "es2021",
      "dom"
    ],
    "outDir": "./dist/",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
